{
  "manifest_version": 2,

  "name": "__MSG_OptionsTitle_label__",
  "description": "__MSG_appDesc__",
  "version": "2.3",
  "author": "ISISLab, University of Salerno, Italy",
  
  "default_locale": "it",
  
  "icons": {
		"16" : "NoTrace.png",
		"48" : "NoTrace_logo.png"
		},

  "browser_action": {
    "default_icon": "imgs/NoTrace.png",
    "default_title": "NoTrace",
